APP_NAME=LarastoryVPN
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://larastory.com

APP_LOCALE=ru
APP_FALLBACK_LOCALE=en

LOG_CHANNEL=stack
LOG_LEVEL=info

DB_CONNECTION=sqlite

SESSION_DRIVER=file
SESSION_LIFETIME=120

CACHE_STORE=file

#--------------------------------------------------------------------------
# 3x-ui Panel Configuration
#--------------------------------------------------------------------------
# Host should be the container name when using Docker Compose
XUI_HOST=3x-ui
XUI_PORT=2053
XUI_PATH=
XUI_USERNAME=admin
XUI_PASSWORD=your_secure_password
XUI_INBOUND_ID=1

#--------------------------------------------------------------------------
# Telegram Bot Configuration
#--------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

#--------------------------------------------------------------------------
# VPN Domain Configuration
#--------------------------------------------------------------------------
# Change these when you need to switch domains quickly (ISP blocking)
VPN_PRIMARY_DOMAIN=larastory.com
VPN_PANEL_DOMAIN=dashboard.larastory.com
VPN_SUBSCRIPTION_PORT=2096

#--------------------------------------------------------------------------
# VPN Client Defaults
#--------------------------------------------------------------------------
VPN_DEFAULT_DEVICE_LIMIT=2
VPN_DEFAULT_TRAFFIC_LIMIT=0
